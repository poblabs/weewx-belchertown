                <!-- Begin of fourth row - dynamic charts -->
                <div class="row highcharts-row graph">
                    <div class="col-sm-12 wx-graph-front">
                        <span class="homepage-graphgroup-title">$chartgroup_titles_dict[$Extras.highcharts_homepage_graphgroup]</span> <a href="$belchertown_root_url/graphs">$obs.label.homepage_graphs_link</a>
                    </div>
                    
                    <div class="graph_outer row"></div><!-- JS populated -->
                    
